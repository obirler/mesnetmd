<Window x:Class="MesnetMD.Xaml.Pages.MessagePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource message}" Height="150" Width="312" Icon="/Assets/applogo.ico" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <StackPanel>
        <Grid Height="50" Margin="10">
            <TextBlock x:Name="Message" TextAlignment="Center" Text="Hello, world!" VerticalAlignment="Center" TextWrapping="Wrap" Width="276"/>
        </Grid>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="yesbtn" Content="{DynamicResource yes}" Height="30" Width="80" Margin="10,0,16,0" BorderBrush="{x:Null}" Click="yesbtn_Click"/>
            <Button x:Name="nobtn" Content="{DynamicResource no}" Height="30" Width="80" Margin="0,0,16,0" BorderBrush="{x:Null}" Click="nobtn_Click"/>
            <Button x:Name="cancelbtn" Content="{DynamicResource cancel}" Height="30" Width="80" BorderBrush="{x:Null}" Click="cancelbtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
