<UserControl x:Class="MesnetMD.Xaml.User_Controls.BasicSupportItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesnetMD.Xaml.User_Controls"
             mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal">
        <Grid Height="20" Width="20">
            <Polygon Points="10,4 4,16 5.5,16 10,6.8" Fill="Black"/>
            <Polygon Points="10,4 16,16 14.5,16 10,6.8" Fill="Black"/>
            <Polygon Points="4,16 16,16 15,14.8 5,14.8" Fill="Black"/>
        </Grid>

        <TextBlock Margin="5,0,0,0" x:Name="supportheader" VerticalAlignment="Center" ></TextBlock>
    </StackPanel>
</UserControl>
