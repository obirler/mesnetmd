<UserControl x:Class="MesnetMD.Xaml.User_Controls.LengthItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesnetMD.Xaml.User_Controls"
             mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal">
        <Grid Height="20" Width="20">
            <Polygon Points="2,10 5,12.5 5,11 15,11 15,12.5 18,10 15,7.5 15,9 5,9 5,7.5" Fill="Black"></Polygon>
        </Grid>

        <TextBlock Margin="5,0,0,0" x:Name="length" VerticalAlignment="Center" ></TextBlock>
    </StackPanel>
</UserControl>
